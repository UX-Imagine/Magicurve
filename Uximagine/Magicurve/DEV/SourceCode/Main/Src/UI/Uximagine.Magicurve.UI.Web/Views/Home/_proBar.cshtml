@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Layout = null;
}


@section scripts
{

<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.10.2.min.js"></script>


}

<div id="propertyBar">
    <form class="form-horizontal">
        <div>
            <label for="left" class="col-sm-2 control-label">Left</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="left" placeholder="Left" ng-change="changed()" ng-model="control.left">
            </div>
        </div>

        <div>
            <label for="top" class="col-sm-2 control-label">Top</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="top" placeholder="Top" ng-change="changed()" ng-model="control.top">
            </div>
        </div>
        <div>
            <label for="width" class="col-sm-2 control-label">Width</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="width" placeholder="Width" ng-change="changed()" ng-model="control.width">
            </div>
        </div>
        <div>
            <label for="height" class="col-sm-2 control-label">Height</label>
            <div class="col-sm-10">
                <input type="number" class="col-sm-10 form-control" id="height" placeholder="Height" ng-change="changed()" ng-model="control.height">
            </div>
        </div>
        <div>
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
    </form>


    </div>

